<body>
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="col-lg-8 col-sm-10">
                <div class="card mt-4 my-border" id="my-shadow">
                    <div class="card-body" id="form">
                        <img src="/images/whatsCHAT600.png" class="img-fluid biglogo" id="login_logo">
                        <br><br>
                        <h5 class="card-title">Login to start chatting today!</h5>
                        <form id="loginuser">

                            <label for="name"><i class="fas fa-user"></i> <b>Username:</b></label>
                            <input type="name" placeholder="Your Username" pattern="[A-Za-z0-9]{1,}" name="name" required>
                            <br>
                            <label for="psw"><i class="fas fa-lock"></i> <b>Password:</b></label>
                            <input type="password" placeholder="Your Password" name="psw" required>
                            <br>
                            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in-alt"></i>
                                Login</button>


                        </form>
                        {{!-- <a href="/"><i class="fas fa-home"></i> Back To Home</a>
                            <br> --}}
                        <a href="/signup" id="text-fader"><i class="fas fa-user-plus"></i> Not a member yet? Click
                            here to sign
                            up!</a>


                        {{!-- </div> --}}
                    </div>

                    <h4>{{msg}}</h4>
                </div>
            </div>
        </div>

        <script type="text/javascript">

            $(".biglogo").on("mouseenter", function () {
                $(".biglogo").addClass("animated pulse");
            });

            $(".biglogo").on("mouseleave", function () {
                $(".biglogo").removeClass("animated pulse");
            });

        </script>

</body>