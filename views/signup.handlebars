<body>
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="col-lg-8 col-sm-10">
                <div class="card mt-4 my-border" id="my-shadow">
                    <div class="card-body" id="form">
                        <img src="/images/whatsCHAT600.png" class="img-fluid biglogo" id="login_logo">
                        <br><br>
                        <h5 class="card-title">Sign-Up to start chatting today!</h5>
                        <form id="createuser">
                            <label for="name"><i class="fas fa-user"></i> <b>Username:</b></label>
                            <input type="name" placeholder="Your Username" name="name" pattern="[A-Za-z0-9]{1,}" required>
                            <br>
                            <label for="psw"><i class="fas fa-lock"></i> <b>Password:</b></label>
                            <input type="password" placeholder="Your Password" name="psw" required>
                            <br>
                            <p>Username will be converted to all caps</p>
                            <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus"></i> Sign
                                Up</button>
                        </form>
                        <a href="/" id="text-fader"><i class="fa fa-sign-in-alt"></i> Back To Login page</a>
                    </div>
                    <h4>{{msg}}</h4>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        $(".biglogo").on("mouseenter", function () {
            $(".biglogo").addClass("animated zoomOut");
            $(".biglogo").removeClass("zoomIn");
        });

        $(".biglogo").on("mouseleave", function () {
            $(".biglogo").removeClass("zoomOut");
            $(".biglogo").addClass("animated zoomIn");
        });

    </script>
</body>